<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b8/Colombia_road_sign_SP-49_%28capybara%29.svg/600px-Colombia_road_sign_SP-49_%28capybara%29.svg.png" alt="food-app">
  </a>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if current_user && current_user.admin %>
      <%= link_to "Add new product", new_product_path, class: 'btn btn-outline-success' %>
    <% end %>

    <% if user_signed_in? && current_user.avatar.url.present? %>

      <!-- Profile picture with dropdown list -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
        <%= image_tag(current_user.avatar.url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown"  ) %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <!--            <li><a href="#">Profile</a></li>-->
            <li>
              <%= link_to 'Edit registration', edit_user_registration_path, class: 'navbar-wagon-item navbar-wagon-link' %>
            </li>
            <li>
              <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'navbar-wagon-item navbar-wagon-link' %>
            </li>
          </ul>
        </div>
      </div>



      <% elsif user_signed_in? %>
        <div class="navbar-wagon-item">
              <div class="dropdown">
                <img src="https://pikio.pl/wp-content/uploads/2018/12/nosacz11-1021x580.jpg" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
                <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
                <li>
                  <%= link_to 'Edit registration', edit_user_registration_path, class: 'navbar-wagon-item navbar-wagon-link' %>
                </li>
                <li>
                  <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'navbar-wagon-item navbar-wagon-link' %>
                </li>
                </ul>
              </div>
            </div>
          </div>

    <% else %>
      <%= link_to 'Login', new_user_session_path, class: 'navbar-wagon-item navbar-wagon-link' %>
      <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: 'navbar-wagon-item navbar-wagon-link' %>
      <%= link_to 'Register', new_user_registration_path, class: 'navbar-wagon-item navbar-wagon-link' %>
    <% end %>

  </div>


</div>
