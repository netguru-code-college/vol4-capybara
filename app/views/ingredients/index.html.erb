      <%= ingredient.quantity %>
      <%= ingredient.unit %>


      <%= f.check_box(:selected_ingredients,
                      {multiple: true, checked: @selected_ingredient_names.include?(ingredient.product.name)},
                      ingredient.product.name,
                      nil ) %>
      
      
    </div>
  <% end %>

