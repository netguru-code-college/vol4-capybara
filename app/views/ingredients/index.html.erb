<h1>List of Ingredients</h1>


<%= form_with(method: :get, local: true) do |f| %>

  <% @ingredients.each do |ingredient| %>
    <div>
      <a href="<%= ingredient_path(ingredient) %>">
        <b><h3><%= ingredient.name %></h3></b>
      </a>

      <%= f.check_box(:selected_ingredients,
                      {multiple: true, checked: @selected_ingredient_names.include?(ingredient.name)},
                      ingredient.name,
                      nil ) %>
    </div>
  <% end %>


  <%= f.submit "Send" %>
<% end %>



